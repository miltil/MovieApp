<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.example.megan.movieapp.DetailActivityFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/Big_Title"
                android:id="@+id/detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingRight="0dp"
                android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/detail_poster"
                        android:layout_width="150dp"
                        android:layout_height="200dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/detail_poster"
                android:paddingTop="40dp"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/detail_release_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_headline_material"/>

                <TextView
                    android:id="@+id/detail_vote_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        <ImageButton
            android:id="@+id/faveHeart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_favorite_border_white"
            style="?android:attr/borderlessButtonStyle"
            />

    </RelativeLayout>

    <TextView
        style="@style/Little_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/overview_title"/>

    <TextView
        android:id="@+id/detail_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"/>



    <TextView
        style="@style/Little_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previews_title" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:id="@+id/trailerContainer"/>


    <TextView
        style="@style/Little_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reviews_title"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:id="@+id/reviewContainer"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
